general { interval = 1 }

order += 'memory'
order += 'cpu_usage'
order += 'volume master'
order += 'battery all'
order += 'time'

memory { format = '%used' }

cpu_usage { format = '%usage' }

volume master {
    format       = '%volume'
    format_muted = '%volume'
}

battery all {
    format             = '%status %percentage'
    format_down        = ''
    last_full_capacity = true
    low_threshold      = 20
    threshold_type     = percentage
}

time { format = '%a %F %T' }
